<header class="header">
  <div class="container flex justify-between items-center">
    <a href="#" class="logo">
      <img src="/logo.png" alt="sense|making logo" />      
    </a>
    
    <button class="mobile-menu-toggle" aria-label="Toggle Menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>

    <nav class="main-nav">
      <ul class="nav-list">
        <li><a href="#approach" class="nav-link">Approach</a></li>
        <li><a href="#techniques" class="nav-link">Techniques</a></li>
        <li><a href="#clients" class="nav-link">Clients</a></li>
        <li><a href="#contact" class="button button-primary">Contact</a></li>
      </ul>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.querySelector('.mobile-menu-toggle');
    const mainNav = document.querySelector('.main-nav');
    
    menuToggle?.addEventListener('click', () => {
      menuToggle.classList.toggle('active');
      mainNav?.classList.toggle('show');
      document.body.classList.toggle('menu-open');
    });

    // Close menu when clicking on a link
    const navLinks = document.querySelectorAll('.nav-link, .main-nav .button');
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        menuToggle?.classList.remove('active');
        mainNav?.classList.remove('show');
        document.body.classList.remove('menu-open');
      });
    });
  });
</script>
