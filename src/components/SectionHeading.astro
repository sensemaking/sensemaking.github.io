---
interface Props {
  title: string;
  subtitle?: string;
  id?: string;
  align?: 'left' | 'center' | 'right';
}

const { 
  title, 
  subtitle, 
  id, 
  align = 'center' 
} = Astro.props;

const textAlignClass = `text-${align}`;
---

<div class={textAlignClass} id={id}>
  <h2>{title}</h2>
  {subtitle && <p>{subtitle}</p>}
</div>
